@model BrandViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="flex-container">
    <div class="w-100">
        <div class="icon" style="text-align:center;">
            <img src="~/images/icron.jpg" style="margin:auto 0;" />
        </div> 
        <h4 class="text-center mb-2">Brands</h4>
        <form asp-controller="Brand" asp-action="SelectBrand" method="post">
            <select style="position:relative;padding:5px;" asp-for="BrandId" asp-items="@Model.GetBrands()" class="form-group form-control" onchange="this.form.submit();">
                <option selected style="display:none;">Select Brand</option>
            </select>
        </form>
        <catalogue brand="@Model.BrandId"></catalogue>
    </div>
</div>
<div class="modal" id="details_popup">
    <div class="modal-dialog">
        <div class="modal-content col-12">
            <div class="modal-body">
                <button type="button" class="close" style="font-size:xx-large;" data-dismiss="modal">X</button>
                <div class="text-center">

                    <h4 id="pname"></h4>
                    
                    
                </div>
                <form asp-controller="Brand" asp-action="SelectItem" method="post" role="form">

                    <div class="text-center col-sm-offset-2">
                        <div class="modalrow">
                            <img alt="" id="detailsGraphic" style="width:85px;height:140px;" /><br />
                            <p id="description" style="text-align:left;padding-left:2%;"></p>
                        </div>

                        <div class="modalrow">
                            <div class="columnL" style="color:blue;">Price</div>
                            <div class="columnR" style="color:blue;font-weight:bold;" id="price"></div>
                        </div>
                        <div class="modalrow mb-4">
                            <div class="columnL">Qty</div>
                            <div class="columnR" id="cal">
                                <input asp-for="Qty" type="number" maxlength="3" size="3" style="width: 50px;" id="qty" />
                                <input asp-for="ProductId" type="hidden" id="selectedId" />
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark">
                            Add To Cart
                        </button>
                        <button id="btnRemove" type="submit" class="btn btn-outline-danger">Remove Item</button>
                        <a href="/Cart" class="btn btn-outline-success">View Cart</a>
                    </div>
                </form>
            </div>
            <div class="m-2">
                <div class="text-right font-weight-bold" id="results"> @ViewBag.AddMessage</div>
            </div>
        </div><!--modal-content-->
    </div><!--modal-dialog-->
</div><!--modal-->
